{
  "name": "orpc-shield",
  "version": "0.0.1",
  "type": "module",
  "description": "oRPC permissions as another layer of abstraction!",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omar-dulaimi/orpc-shield.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": {
    "name": "Omar Dulaimi",
    "url": "https://github.com/omar-dulaimi"
  },
  "keywords": ["orpc", "orpc-shield", "permissions", "middleware", "authorization"],
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "prerelease": "npm run build",
    "release": "./package.sh && cd package && npm publish",
    "semantic-release": "semantic-release",
    "prettier": "prettier --ignore-path .gitignore --write --list-different \"**/*.{ts,tsx,yml}\"",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "husky",
    "commit": "git-cz"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{js,jsx,json,yml,yaml,md}": ["prettier --write"]
  },
  "peerDependencies": {
    "@orpc/server": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@orpc/server": "^1.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/node": "24.1.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "lint-staged": "16.1.2",
    "prettier": "3.6.2",
    "pretty-quick": "4.2.2",
    "rimraf": "6.0.1",
    "semantic-release": "^24.2.7",
    "supertest": "^7.1.4",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "vitest": "^3.2.4",
    "zod": "^4.0.10"
  },
  "bugs": {
    "url": "https://github.com/omar-dulaimi/orpc-shield/issues"
  },
  "homepage": "https://github.com/omar-dulaimi/orpc-shield#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
